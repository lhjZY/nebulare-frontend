{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxlint/main/configuration_schema.json",
  "rules": {
    "style/use-const": "warn",
    "correctness/no-constant-condition": "warn",
    "correctness/no-unused-variables": "warn",
    "correctness/no-unsafe-optional-chaining": "warn",
    "correctness/no-empty-pattern": "warn",
    "suspicious/no-implicit-any-catch": "warn",
    "suspicious/no-await-in-loop": "warn"
  },
  "formatter": {
    "lineWidth": 100,
    "indentWidth": 2,
    "indentStyle": "space",
    "quoteStyle": "double"
  }
}
